{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2023",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "typeRoots": ["node_modules/@types", "src/types"],
    "paths": {
      "@modules/*": ["src/modules/*"],
      "@modules": ["src/modules"],
      "@prisma/*": ["prisma/*"],
      "@prisma": ["prisma"],
      "@config/*": ["src/config/*"],
      "@config": ["src/config"],
      "@shared/*": ["src/shared/*"],
      "@shared": ["src/shared"],
      "@user/*": ["src/modules/user/*"],
      "@user": ["src/modules/user"],
      "@auth/*": ["src/modules/auth/*"],
      "@auth": ["src/modules/auth"]
    }
  }
}
